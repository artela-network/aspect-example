  "exports": {
    ".": {
      "import": "./build/release.js",
      "types": "./build/release.d.ts"
    }
  },
  "devDependencies": {
    "assemblyscript": "^0.27.5",
    "as-proto-gen": "^1.3.0",
    "@artela/aspect-tool": "^0.0.28",
    "yargs": "^17.7.2"
  },
  "dependencies": {
    "@artela/aspect-libs": "^0.0.15",
    "@artela/web3": "^1.9.2",
    "@artela/web3-atl-aspect": "^1.9.2",
    "@artela/web3-eth-contract": "^1.9.2",
    "@artela/web3-utils": "^1.9.1",
